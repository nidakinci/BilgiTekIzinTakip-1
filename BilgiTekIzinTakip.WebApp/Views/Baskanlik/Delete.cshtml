@model BilgiTekIzinTakip.Entities.Baskanlik

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Başkanlık</h2>

<h3>Sil</h3>
<div>
    <h4>Bunu silmek istediğinizden emin misiniz?</h4>
    <hr />
    <dl class="dl-horizontal">
        
            <dt>

                <label class="col-md m-t-15">Başkanlık İsmi</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Isim)
            </dd>
        
    </dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Bootstrap.Button("danger", "btn-secondary", "submit", "delete", "Sil")

        @Bootstrap.LinkButton("/Baskanlik/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")
    </div>
}
</div>
