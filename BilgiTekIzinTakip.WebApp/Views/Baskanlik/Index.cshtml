@model IEnumerable<BilgiTekIzinTakip.Entities.Baskanlik>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Başkanlık</h2>

<div class="form-horizontal">
    <div class="card">

        <div class="card-body">
            <p>
                @Bootstrap.LinkButton("/Baskanlik/Create", "primary", "btn btn", "Yeni Ekle", "plus", "Yeni Ekle")
            </p>
            <table class="table">
                <tr>
                    <th>
                        <h4>Başkanlıklar</h4>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isim)
                        </td>
                        <td>
                            @Bootstrap.LinkButton("/Baskanlik/Edit/" + item.Id, "cyan", "btn-sm", "Düzenle", "tooltip-edit", "Düzenle")
                            @Bootstrap.LinkButton("/Baskanlik/Details/" + item.Id, "success", "btn-sm", "Detay", "details", "Detay")
                          
                        </td>
                    </tr>


                }

            </table>

        </div>
    </div>
    </div>

