@model BilgiTekIzinTakip.Entities.IzinTipi

@{
    ViewBag.Title = "İzin Tipi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <div class="card">
     
        <div class="card-body">
            <h4>İzin Tipi Ekle</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">

                <label class="col-md-2 m-t-15">İzin Türü</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.IzinTuru, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IzinTuru, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">


                <label class="col-md-2 m-t-15">Renk Kodu</label>


                <div class="col-md-4">

                    @Html.TextBoxFor(model=>model.RenkKodu)
                    <input type="text" id="RenkKodu" class="form-control demo" data-control="hue" value="#ff6161">
                </div>

            </div>

            <div class="form-group row">
                <div class="col-md-2 m-t-15">
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </div>
            <div>
                @Bootstrap.LinkButton("/IzinTipi/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")
            </div>


        </div>
       
    </div>
    
</div>
            }
          

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
