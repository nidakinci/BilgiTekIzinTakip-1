@model BilgiTekIzinTakip.Entities.IzinTipi

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İzin Tipi</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Düzenle</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="col-md-3 m-t-15">İzin Türü</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.IzinTuru, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IzinTuru, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Bootstrap.Button("success", string.Empty, "submit", "content-save", "Kaydet")
            @Bootstrap.LinkButton("/IzinTipi/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")

        </div>
    </div>
</div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
