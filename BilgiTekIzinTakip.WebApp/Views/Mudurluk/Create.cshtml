@model BilgiTekIzinTakip.Entities.Mudurluk

@{
    ViewBag.Title = "Müdürlük";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <div class="card">
       
        <div class="card-body">

            <h4>Müdürlük Ekle</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">


                <label class="col-md-2 m-t-15">Başkanlık</label>
                <div class="col-md-4" >
                

                    @Html.LabelFor(model => model.BaskanlikId, "", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.DropDownList("BaskanlikId", null, "Seçiniz", htmlAttributes: new { @class = "control-label col-md-12" })
                </div>

            </div>



            <div class="form-group row">
                <label class="col-md-2 m-t-15">Müdürlük İsmi</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Isim, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Ekle</button>
            </div>

            <div>
                @Bootstrap.LinkButton("/Mudurluk/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")
            </div>
        </div>


            </div>
    
    </div>


    
            }

           

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
