@model IEnumerable<BilgiTekIzinTakip.Entities.Mudurluk>

@{
    ViewBag.Title = "Müdürlük";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Müdürlük</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Isim)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Isim)
        </td>
        <td>
            @Bootstrap.LinkButton("/Mudurluk/Edit/" + item.Id, "cyan", "btn-sm", "Düzenle", "tooltip-edit", "Düzenle")
            @Bootstrap.LinkButton("/Mudurluk/Details/" + item.Id, "success", "btn-sm", "Detay", "details", "Detay")
            @Bootstrap.LinkButton("/Mudurluk/Delete/" + item.Id, "danger", "btn-sm", "Düzenle", "delete", "Sil")
        </td>
    </tr>
}

</table>
