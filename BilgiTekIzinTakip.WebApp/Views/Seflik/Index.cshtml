@model IEnumerable<BilgiTekIzinTakip.Entities.Seflik>

@{
  
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Şeflik</h2>
<div class="form-horizontal">
    <div class="card">

        <div class="card-body">
            <p>
                @Bootstrap.LinkButton("/Seflik/Create", "primary", "btn btn", "Yeni Ekle", "plus", "Yeni Ekle")
            </p>
            <table class="table">
                <tr>
                    <th>
                        <h4>Başkanlık</h4>
                    </th>
                    <th>
                        <h4>Müdürlük</h4>
                    </th>
                    <th>
                        <h4>Şeflikler</h4>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Baskanlik.Isim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mudurluk.Isim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isim)
                </td>
                <td>
                    @Bootstrap.LinkButton("/Seflik/Edit/" + item.Id, "cyan", "btn-sm", "Düzenle", "tooltip-edit", "Düzenle")
                    @Bootstrap.LinkButton("/Seflik/Details/" + item.Id, "success", "btn-sm", "Detay", "details", "Detay")

                </td>
            </tr>
                }

            </table>
        </div>
    </div>
</div>