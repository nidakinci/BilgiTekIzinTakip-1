@model BilgiTekIzinTakip.Entities.Seflik

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Şeflik</h2>

<h3>Sil</h3>
<div>
    <h4>Bunu silmek istediğinizden emin misiniz?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="col-md-3 m-t-15">Şeflik İsmi</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Isim)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Bootstrap.Button("danger", "btn-secondary", "submit", "delete", "Sil")

        @Bootstrap.LinkButton("/Seflik/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")
    </div>
    }
</div>
