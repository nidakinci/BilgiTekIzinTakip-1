@model BilgiTekIzinTakip.Entities.Seflik

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Şeflik</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="card">

            <div class="card-body">
                <h4>Düzenle</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Baskanlik.Isim, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.Baskanlik.Id, (IEnumerable<SelectListItem>)ViewBag.BaskanlikId, null, htmlAttributes: new { @class = "control-label col-md-12", @id = "BaskanlikId" })
                        @Html.ValidationMessageFor(model => model.Baskanlik.Isim, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Mudurluk.Isim, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.Mudurluk.Id, (IEnumerable<SelectListItem>)ViewBag.MudurlukId, null, htmlAttributes: new { @class = "control-label col-md-12", @id = "MudurlukId" })
                        @Html.ValidationMessageFor(model => model.Mudurluk.Isim, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 m-t-15">Şeflik İsmi</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Isim, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Isim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Bootstrap.Button("success", string.Empty, "submit", "content-save", "Kaydet")
                        @Bootstrap.LinkButton("/Seflik/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")

                    </div>
                </div>
            </div>
        </div>
    </div>
   

        }


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
