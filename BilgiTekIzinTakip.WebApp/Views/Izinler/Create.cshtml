@model BilgiTekIzinTakip.Entities.Izinler

@{
    ViewBag.Title = "İzinler";

    Layout = "~/Views/Shared/_Layout.cshtml";
}






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="card">
        
        <div class="card-body">
            <h4>İzinler Ekle</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model=>model.NameSurname,htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model=>model.NameSurname, null, new { @placeholder = "Ara...", @id = "PersonelId", @required = true, @class = "form-control" })
                </div>
            </div>
           
            <div class="form-group row">
                @Html.LabelFor(model => model.IzinTipi.IzinTuru, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.IzinTipi.IzinTuru, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(x => x.IzinTipi.Id, (IEnumerable<SelectListItem>)ViewBag.IzinTuru, "Seçiniz", htmlAttributes: new { @class = "select2 form-control custom-select select2-hidden-accessible col-md-12" })
                    @*@Html.DropDownListFor(x => x.Baskanlik.Id, (IEnumerable<SelectListItem>)ViewBag.BaskanlikId, null, htmlAttributes: new { @class = "select2 form-control custom-select select2-hidden-accessible col-md-12", @id = "BaskanlikId" })*@

                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BaslangicTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BaslangicTarihi, new { htmlAttributes = new { @class = "form-control", @id = "datetimepicker1" } })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BitisTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BitisTarihi, new { htmlAttributes = new { @class = "form-control", @id = "datetimepicker2" } })
                </div>
            </div>
            <div class="form-group row">

                <div class="col-md-2 m-t-15">
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </div>

            <div>

                @Bootstrap.LinkButton("/Izinler/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")

            </div>

        </div>
       
    </div>

   

</div>
    
    }

