@model BilgiTekIzinTakip.Entities.Izinler

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İzinler</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Düzenle </h4>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group row">
        <div class="col-md-2 m-t-15">
            @Html.LabelFor(model => model.BaslangicTarihi, htmlAttributes: new { @class = "control-label" })
        </div>
     
            <div class="col-md-4">
                @Html.EditorFor(model => model.BaslangicTarihi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BaslangicTarihi, "", new { @class = "text-danger" })
            </div>
      
    </div>

    <div class="form-group row">
        <div class="col-md-2 m-t-15">
            @Html.LabelFor(model => model.BitisTarihi, htmlAttributes: new { @class = "control-label" })
        </div>
        
            <div class="col-md-4">
                @Html.EditorFor(model => model.BitisTarihi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BitisTarihi, "", new { @class = "text-danger" })
            </div>

       
    </div>
        <div class="form-group row">
            <div class="col-md-2 m-t-15">
                @Html.LabelFor(model => model.Personel, htmlAttributes: new { @class = "control-label" })
            </div>

            <div class="col-md-4">
                @Html.EditorFor(model => model.Personel.Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Personel.Ad, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            <div class="col-md-2 m-t-15">
                @Html.LabelFor(model => model.IzinTipi.IzinTuru, htmlAttributes: new { @class = "control-label" })
            </div>

            <div class="col-md-4">
                @Html.EditorFor(model => model.IzinTipi.IzinTuru, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IzinTipi.IzinTuru, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Bootstrap.Button("success", string.Empty, "submit", "content-save", "Kaydet")
                @Bootstrap.LinkButton("/Izinler/Index", "secondary", "btn btn", "Listeye geri dön", "keyboard-backspace", "Listeye geri dön")

            </div>
        </div>
 
</div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
