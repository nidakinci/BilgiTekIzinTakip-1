@model IEnumerable<BilgiTekIzinTakip.Entities.Izinler>

@{
    ViewBag.Title = "İzinler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İzinler</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            
            @Html.DisplayNameFor(model => model.BaslangicTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BitisTarihi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BaslangicTarihi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BitisTarihi)
        </td>
        <td>
            @Bootstrap.LinkButton("/Izinler/Edit/" + item.Id, "cyan", "btn-sm", "Düzenle", "tooltip-edit", "Düzenle")
            @Bootstrap.LinkButton("/Izinler/Details/" + item.Id, "success", "btn-sm", "Detay", "details", "Detay")
            @Bootstrap.LinkButton("/Izinler/Delete/" + item.Id, "danger", "btn-sm", "Düzenle", "delete", "Sil")
        </td>
    </tr>
}

</table>
